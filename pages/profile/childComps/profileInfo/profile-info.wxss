/* pages/profile/childComps/profileInfo/profile-info.wxss */
.profile-info {
	padding: 12px;
}

.info-avatar {
	position: relative;
  margin: 0 auto;
	width: 180rpx;
	height: 180rpx;
}

.info-avatar image {
  width: 100%;
  height: 100%;
}

.info-avatar icon {
	position: absolute;
	bottom: -10rpx;
	right: 0;
	font-size: 60rpx;
	color: #006633;
}

.info-name {
  font-size: 14px;
}